<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Message from other user (left side) -->
    <LinearLayout
        android:id="@+id/layout_message_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_message_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="280dp"
            android:background="@drawable/message_bubble_other"
            android:padding="12dp"
            android:text="Pesan dari user lain"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Message from current user (right side) -->
    <LinearLayout
        android:id="@+id/layout_message_self"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_message_self"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="280dp"
            android:background="@drawable/message_bubble_self"
            android:padding="12dp"
            android:text="Pesan dari saya"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Timestamp -->
    <TextView
        android:id="@+id/tv_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:text="12:34"
        android:textSize="12sp"
        android:textColor="#888888" />

</LinearLayout>